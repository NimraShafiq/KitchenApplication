<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProductActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:id="@+id/round_korner_layout"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:corner_radius="18dp"
            android:layout_margin="6dp"
            android:layout_below="@id/toolbar"
            android:padding="1dp"
            >
            <ImageView
                android:id="@+id/iv_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kitchen"
                android:scaleType="centerCrop"
                />
        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_image_layout"
            android:layout_below="@id/round_korner_layout"
            android:layout_centerInParent="true"
            >
            <TextView
                android:id="@+id/tv_change_product_image"
                android:layout_width="wrap_content"
                android:text="Change Product Image"
                android:layout_height="wrap_content"
                android:textColor="#900a0a"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginTop="7dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/change_image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:padding="4dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/et_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:inputType="textCapWords"
                android:scrollHorizontally="false"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="7dp"
                android:gravity="top|left"
                android:background="@drawable/outline_textview1"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:padding="4dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/et_product_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="7dp"
                android:gravity="top|left"
                android:background="@drawable/outline_textview1"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:padding="4dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/et_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:inputType="number"
                android:scrollHorizontally="false"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="7dp"
                android:gravity="top|left"
                android:background="@drawable/outline_textview1"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:padding="4dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/colorPrimaryDark"/>

            <EditText
                android:id="@+id/et_product_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:scrollHorizontally="false"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:paddingBottom="7dp"
                android:gravity="top|left"
                android:background="@drawable/outline_textview1"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:paddingTop="10dp"
                android:translationY="1dp"
                android:inputType="number"
                android:layout_marginBottom="10dp"
                />

            <Button
                android:id="@+id/btn_confirm_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_button_product_bg"
                android:text="Add"
                android:textAllCaps="false"
                android:padding="8dp"
                android:textColor="#fff"
                android:layout_marginTop="12dp"
                android:focusable="false"
                android:editable="false"
                android:textSize="20sp"
                />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>