<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginTop="18dp"
            android:id="@+id/tv_product_name"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="4dp"
            android:textColor="#1f0404"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_product_desc"
            android:text="Description"
            android:textSize="14sp"
            android:layout_below="@id/tv_product_name"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"

            android:layout_toLeftOf="@id/tv_product_price"
            android:textStyle="italic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs: 123"
           android:layout_marginTop="18dp"
            android:layout_alignParentRight="true"
            android:padding="4sp"
            android:layout_marginRight="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:textStyle="italic"
            android:id="@+id/tv_product_price"

            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="30"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/product_layout"
        android:layout_marginTop="4dp"
       >
       <!-- <Button
            android:id="@+id/btn_product_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProductOptions"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:background="@drawable/btn_place"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:layout_weight="10"
            android:layout_marginRight="9dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:minHeight="0dp"
            />-->
        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:background="@drawable/btn_place"
            android:layout_weight="10"
            android:layout_marginRight="25dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:minHeight="0dp"/>
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:background="@drawable/btn_place"
            android:textSize="14sp"
            android:layout_weight="10"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:minHeight="0dp"/>
    </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>