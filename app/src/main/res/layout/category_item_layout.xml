<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="9dp">
    <TextView
        android:id="@+id/tv_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category Name"
        android:fontFamily="sans-serif"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1f0404"
        android:layout_marginLeft="9dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"/>
    <TextView
        android:id="@+id/tv_cat_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#0a3b77"
        android:text="Status"/>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_cat_name"
        android:weightSum="30"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp">
       <!-- <Button
            android:id="@+id/btn_view_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Products"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:background="@drawable/btn_place"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
            android:textSize="14sp"
            android:layout_weight="10"
            android:layout_marginRight="9dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:minHeight="0dp"
            />-->
        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:background="@drawable/btn_place"
            android:layout_weight="10"
            android:layout_marginRight="25dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:minHeight="0dp"/>
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:background="@drawable/btn_place"
            android:textSize="14sp"
            android:layout_weight="10"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:minHeight="0dp"/>
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#676565"
        android:layout_marginTop="4dp"/>
</RelativeLayout>